.page-header
  = link_to hosts_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_host_path(@host), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  = link_to sync_host_path(@host), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-refresh
    Sync Host
  %h1 Show host

%dl.dl-horizontal
  %dt Name:
  %dd= @host.name
  %dt Addr:
  %dd= @host.addr
  %dt Public key:
  %dd= @host.public_key

%h2 Application List
= render 'apps/app_table', apps: @host.apps

%h2 Plugin List
= render 'plugins/plugin_table', plugins: @plugins, host: @host